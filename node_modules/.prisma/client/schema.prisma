generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user  Int      @id @default(autoincrement())
  name     String
  dt_birth DateTime
  email    String   @unique
  password String
  teams    Team[]   @relation("UserTeams")

  @@map("tab_user")
}

model Team {
  id_team       Int            @id @default(autoincrement())
  name          String
  id_user       Int
  user          User           @relation("UserTeams", fields: [id_user], references: [id_user])
  collaborators Collaborator[]

  @@map("tab_team")
}

model Collaborator {
  id_collaborator Int    @id @default(autoincrement())
  name            String
  cargo           String
  id_team         Int
  team            Team   @relation(fields: [id_team], references: [id_team])
  url_image       String

  @@map("tab_collaborator")
}
